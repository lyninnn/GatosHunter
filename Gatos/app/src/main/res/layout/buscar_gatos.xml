<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- SecciÃ³n superior: Layout horizontal con imagen y botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:padding="16dp">


        <EditText
            android:id="@+id/editTextTime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:hint="Tiempo restante: xx/xx/xxxx"
            android:inputType="none"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textSize="26sp">

        </EditText>
    </LinearLayout>

    <!-- Nuevo LinearLayout (debajo de los anteriores) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:padding="16dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="#6200EE"
            android:text="Volver Atras"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#6200EE"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:text="Comprar Gato"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>

